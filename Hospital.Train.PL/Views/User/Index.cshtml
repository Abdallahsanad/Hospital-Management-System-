@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />

<form asp-action="Index" class="row col-8 offset-2">
    <div class="col-8">
        <input type="text" name="search" class="form-control" placeholder="Search by email..." />
    </div>
    <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success" />
    </div>
</form>

<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.FirstName)</th>
                <th>@Html.DisplayNameFor(m => m.LastName)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles)</td> @* دمج الأدوار بنص واحد *@

                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>No Users Found!</h3>
    </div>
}