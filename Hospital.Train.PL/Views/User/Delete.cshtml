@model UserViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Are you sure you want to delete this user?</h1>
<br />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName" class="col-form-label"></label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <br />
    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>