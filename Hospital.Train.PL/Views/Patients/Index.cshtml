@model IEnumerable<Hospital.Train.PL.ViewModels.Patient.PatientViewModel>
<br />
<br />
<a asp-controller="Patients" asp-action="Create" class="btn btn-primary">Add Patient</a>
<br />
<br />
<br />
<br />
<form asp-action="Index" method="get" class="row mb-3">
    <div class="col-8">
        <input type="text" name="name" class="form-control" placeholder="Search by name..." />
    </div>
    <div class="col-4">
        <input type="submit" value="search" class="btn btn-success" />
    </div>
</form>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover" border=3px style="background-color:antiquewhite">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Age)</th>
                <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(m => m.ConsultantName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Name</td>
                    <td>@patient.Age</td>
                    <td>@patient.DateOfBirth)</td>
                    <td>@patient.ConsultantName)</td>
                    <td>
                        <a asp-controller="Medicine" asp-action="Details" asp-route-id="@patient.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@patient.Id " class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Patients :(</h4>
    </div>
}


