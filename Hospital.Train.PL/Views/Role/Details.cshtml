@model RoleViewModel

@{
    ViewData["Title"] = "Role Details";
}

<div class="container mt-5">
    <h1 class="mb-4">Role Details</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Information for Role: @Model.RoleName</h4>
        </div>
        <div class="card-body">
            <div class="mb-3 row">
                <label asp-for="Id" class="col-sm-2 col-form-label font-weight-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label font-weight-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control-plaintext" readonly />
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="fas fa-edit"></i> Edit Role
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i> Back to List
            </a>
        </div>
    </div>
</div>