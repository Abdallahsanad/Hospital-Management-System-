@model List<Hospital.Train.PL.ViewModels.Role.UsersInRolesViewModel>

@{
    ViewData["Title"] = "Add or Remove Users";
    var roleId = ViewData["RoleId"];
}

<div class="container mt-4">
    <form asp-action="AddOrRemoveUsers" asp-route-RoleId="@roleId" method="post">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2>Manage Users in Role</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-2">
                        
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />

                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer text-muted">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Edit" asp-route-id="@roleId" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>