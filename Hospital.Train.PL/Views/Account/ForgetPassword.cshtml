@model SendResetPassword
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-hospital-symbol fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold">Recover Password</h3>
                        <p class="text-muted">Enter your email to receive a reset link</p>
                    </div>

                    <form asp-action="SendResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger small"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="name@hospital.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">Send Reset Link</button>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="SignIn" class="text-decoration-none small">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>