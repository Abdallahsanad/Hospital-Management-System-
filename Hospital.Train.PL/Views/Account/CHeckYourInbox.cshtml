@{
    ViewData["Title"] = "Check Your Inbox";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5 border-0 d-inline-block">
        <div class="mb-4">
            <i class="fas fa-envelope-open-text fa-4x text-info"></i>
        </div>
        <h2 class="fw-bold">Check Your Email!</h2>
        <p class="text-muted">We've sent a password reset link to your email address.</p>
        <p class="small text-secondary">Please check your spam folder if you don't see it.</p>
        <hr />
        <a asp-action="SignIn" class="btn btn-outline-primary px-4">Back to Login</a>
    </div>
</div>