@model IEnumerable<Hospital.Train.PL.ViewModels.Consultant.ConsultantViewModel>
<br />
<br />
<a asp-controller="Consultant" asp-action="Create" class="btn btn-primary">Create Consultant</a>
<br />
<br />

<form asp-action="Index" method="get" class="row mb-3" enctype="multipart/form-data">
    <div class="col-8">
        <input type="text" name="search" class="form-control" placeholder="Search by name..." />
    </div>
    <div class="col-4">
        <input type="submit" value="Search" class="btn btn-success" />
    </div>
</form>
<br />



@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover" border="2px" style="background-color:antiquewhite">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Image)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DepartmentName)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                 <th>@Html.DisplayNameFor(D => D.Phone)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consultant in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@consultant.ImageName" width="65" class="rounded-circle" />
                    </td>
                    <td>@consultant.Name</td>
                    <td>@consultant.DepartmentName</td>
                    <td>@consultant.Address</td>
                    <td>@Html.DisplayFor(c => consultant.Salary)</td>
                    <td>@Html.DisplayFor(c=> consultant.Email)</td>
                    <td>@consultant.Phone</td>
                    <td>@consultant.Age</td>
                    <td>@consultant.HiringDate</td>
                    <td>
                        <a asp-controller="Consultant" asp-action="Details" asp-route-id="@consultant.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@consultant.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@consultant.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Consultants :(</h4>
    </div>
}


